{
  "name": "@photonic/monorepo",
  "private": true,
  "license": "UNLICENSED",
  "repository": "https://github.com/osamaqarem/photonic2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "patch-package": "^7.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-turbo": "^1.10.3",
    "lerna-update-wizard": "^1.1.2",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.8.8",
    "turbo": "^1.10.6",
    "typescript": "^5.1.6",
    "typescript-eslint": "^0.0.1-alpha.0"
  },
  "engines": {
    "node": "<17 >=16.17.0"
  },
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "checks": "turbo ts lint",
    "ts": "turbo ts",
    "lint": "turbo lint",
    "prettier": "prettier '**/*.{js,jsx,ts,tsx}' --write --ignore-path .gitignore",
    "app:prebuild": "yarn workspace @photonic/expo prebuild",
    "app:prebuild-ios": "yarn workspace @photonic/expo prebuild-ios",
    "app:prebuild-clean": "yarn workspace @photonic/expo prebuild-clean",
    "app:prebuild-clean-ios": "yarn workspace @photonic/expo prebuild-clean-ios",
    "app:platform-colors": "turbo platform-colors",
    "app:ios": "yarn workspace @photonic/expo ios",
    "app:dev": "yarn workspace @photonic/expo dev",
    "app:xcode": "xed ./apps/expo/ios",
    "lambda:build": "yarn workspace @photonic/lambda build",
    "lambda:update-env": "yarn workspace @photonic/lambda update-env",
    "db:generate": "turbo db:generate",
    "db:push": "yarn workspace @photonic/remix db:push",
    "db:studio": "yarn workspace @photonic/remix db:studio",
    "web:dev": "yarn workspace @photonic/remix dev",
    "web:serve": "yarn workspace @photonic/remix serve",
    "web:docker-build": "docker build -f ./apps/remix/Dockerfile -t photonic/remix .",
    "web:docker-run": "docker run -p 3000:3000 --name photonic-remix-container photonic/remix",
    "p": "yarn lernaupdate --lazy",
    "clean-nodemodules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "postinstall": "patch-package",
    "tsc": "echo 'tsc from workspace root will give incorrect results. Run it from each app instead.' && exit 1"
  }
}
